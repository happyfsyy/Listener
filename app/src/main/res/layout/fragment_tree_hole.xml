<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lonely_item_bg"
    >
    <ImageView
        android:id="@+id/tree_hole_header_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ff0000"
        />
    <TextView
        android:id="@+id/tree_hole_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/commonTextSizeBig"
        android:textColor="@color/textColor"
        android:layout_margin="@dimen/inner_padding"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tree_hole_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/commonTextSize"
            android:textColor="@color/textColor"/>
    </ScrollView>
</LinearLayout>